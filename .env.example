# Environment Configuration
# Copy this file to .env and fill in the values.
# LOCAL: DATABASE_URL=file:./dev.db, NEXTAUTH_URL=http://localhost:3000
# PROD (Vercel): Set all vars in Project Settings > Environment Variables.
#    DATABASE_URL=postgresql://..., NEXTAUTH_URL=https://your-domain.com
#    INTERNAL_CRON_SECRET required in prod (min 16 chars).

# ===========================================
# DATABASE
# ===========================================
# For LOCAL DEVELOPMENT (SQLite):
DATABASE_URL="file:./dev.db"

# For PRODUCTION (Supabase Postgres):
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres"

# ===========================================
# AUTHENTICATION
# ===========================================
# Required for NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-at-least-32-characters-long"

# ===========================================
# BILLING (STRIPE)
# ===========================================
# Used by /api/billing/checkout, /api/billing/portal, /api/billing/webhook
APP_URL="http://localhost:3000"
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Trial: 7 or 14 days (configurable)
TRIAL_DAYS="14"

# Stripe price IDs (subscription recurring)
PRO_PRICE_ID_MONTHLY="price_xxx"   # Monthly Pro subscription
PRO_PRICE_ID_YEARLY=""             # Optional: yearly Pro (for toggle in UI)

# Legacy (fallback)
STRIPE_PRICE_ID_PRO=""             # Fallback if PRO_PRICE_ID_MONTHLY not set
STRIPE_PRODUCT_ID_PRO=""
BILLING_GRACE_DAYS="3"

# ===========================================
# ENVIRONMENT
# ===========================================
# Used by LLM-backed AI Coach (server actions)
OPENAI_API_KEY=""

# Used by internal cron/job endpoints (/api/internal/cron/*)
# Required in production (min 16 chars) - set in Vercel env vars
INTERNAL_CRON_SECRET=""

# Optional: Weekly digest email (Resend)
# Set RESEND_API_KEY + EMAIL_FROM in Vercel for digest emails
RESEND_API_KEY=""
EMAIL_FROM="AdaptivAI <onboarding@resend.dev>"

# Set to "production" on Vercel
NODE_ENV="development"
